<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <% cache [post, post.status] do %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

<p>
  <%= button_to "Archive all posts", enqueue_archive_all_posts_path, method: :post %>
</p>
